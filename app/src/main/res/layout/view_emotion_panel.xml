<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.example.kotlin.views.indicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/classic_view"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/emotion_drawable_selector"
            android:padding="7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/emotion_thumbnail_keai" />

        <ImageButton
            android:id="@+id/default_view"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/emotion_drawable_selector"
            android:padding="7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/emotion_thumbnail_weixiao" />

    </LinearLayout>


</LinearLayout>