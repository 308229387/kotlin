<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/local_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


    <Button
        android:id="@+id/bottom_text_pick_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="#2589fa"
        android:onClick="pick"
        android:text="选择文件"
        android:textColor="#fff" />

    <Button
        android:id="@+id/send_data_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_text_pick_view"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#2589fa"
        android:onClick="toSerData"
        android:text="发送序列化数据"
        android:textColor="#fff" />


</RelativeLayout>